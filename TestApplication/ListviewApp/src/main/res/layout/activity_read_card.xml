<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_nomal_margin"
    android:paddingLeft="@dimen/activity_horizontal_nomal_margin"
    android:paddingRight="@dimen/activity_horizontal_nomal_margin"
    android:paddingTop="@dimen/activity_vertical_nomal_margin"
    tools:context="com.jirdy.listview.Activitys.ReadCardActivity">

    <TextView
        android:id="@+id/read_card_bookname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/book_text_name"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/read_card_linear_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/read_card_bookname"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/read_card_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/book_text_finish"
            android:textSize="20dp" />

        <!--<EditText-->
        <!--android:id="@+id/read_card_edit_finish"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_toRightOf="@id/read_card_text_1"-->
        <!--android:layout_alignBottom="@id/read_card_text_1"-->
        <!--android:hint="@string/book_detail_hint_finish"-->
        <!--android:text="288" />-->

        <NumberPicker
            android:id="@+id/read_card_numbicker_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />

        <!--android:layout_alignBottom="@id/read_card_text_1"-->
        <!--android:layout_toRightOf="@id/read_card_text_1"-->
    </LinearLayout>

    <Button
        android:id="@+id/read_card_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/read_card_linear_1"
        android:onClick="readCardOnClick"
        android:text="чбошод" />

</RelativeLayout>
