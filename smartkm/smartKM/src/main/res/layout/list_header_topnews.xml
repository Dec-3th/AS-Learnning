<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <com.jirdy.smartkm.view.HorizontalScrollViewPager
            android:id="@+id/hvp_tap_detail_news"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.jirdy.smartkm.view.HorizontalScrollViewPager>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#5c000000"
            android:padding="5dp">


            <TextView
                android:id="@+id/tv_topnews_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@android:color/white"
                android:textSize="15dp" />

            <com.viewpagerindicator.CirclePageIndicator
                android:id="@+id/topnews_indicator"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="10dip"
                app:centered="false"
                app:fillColor="@android:color/holo_red_light"
                app:pageColor="#9e9e9e"
                app:radius="3dp"
                app:strokeWidth="0dp" />

        </RelativeLayout>

    </FrameLayout>

</LinearLayout>
